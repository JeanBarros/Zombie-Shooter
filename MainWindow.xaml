<Window x:Class="Zombie_Shooter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zombie_Shooter"
        mc:Ignorable="d"
        Title="Zombie Shooter" Height="700" Width="940" >
    <Canvas Name="Stage" Focusable="True" Background="#FF130505" KeyDown="KeyIsDown" KeyUp="KeyIsUp">
        <Label x:Name="txtAmmo" Content="Ammo: 0" Foreground="#FFA2FF00" FontSize="14" Canvas.Top="14" Canvas.Left="10"/>
        <Label x:Name="txtScore" Content="Kills: 0" Foreground="#FFA2FF00" FontSize="14" Canvas.Left="381" Canvas.Top="14"/>
        <Label x:Name="txtHealth" Content="Health:" Foreground="#FFA2FF00" FontSize="14" Canvas.Left="690" Canvas.Top="14"/>
        <Label Name="timer" Foreground="#ffffff" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <ProgressBar x:Name="healthBar" Width="174" Height="20" Canvas.Left="748" Canvas.Top="19" Value="100"/>
        <Image x:Name="player1" Source="images/up.png" Canvas.Left="381" Canvas.Top="559" Height="100" Stretch="UniformToFill" />
        <Rectangle Name="player" Fill="Yellow" Canvas.Left="438" Canvas.Top="559" Width="70" Height="100" />
    </Canvas>
</Window>
